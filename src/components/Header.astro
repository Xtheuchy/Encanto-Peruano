        justify-content: center;
        align-items: center;
        position: absolute;
        z-index: 1000;
    }
    .logo img {
        width: 150px;
        height: 100px;
    }
    .container {
        padding: 5px;
        display: flex;
        align-items: center;
    }
    .nav-top nav ul {
        display: flex;
    }
    .nav-top nav ul li {
        list-style: none;
    }
    .nav-top nav ul li a {
        font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
        text-decoration: none;
        margin: 0 60px;
        font-size: 20px;
        color: rgb(43, 43, 43);
    }
    .nav-secundario button {
        width: 40px;
        height: 35px;
    }
    button {
        border: none;
        background-color: rgba(240, 248, 255, 0);
        cursor: pointer;
    }
    button i {
        font-size: 30px;
    }
    .nav-menu {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        background-color: black;
        width: 200px;
        padding: 20px;
    }
    .nav-menu ul {
        padding: 0;
    }
    .nav-menu ul li {
        padding: 5px;
        list-style: none;
        margin: 15px 0;
        transition: 0.5s;
        cursor: pointer;
        border-bottom: 1px solid white;
    }
    .nav-menu ul li:hover {
        background-color: rgb(83, 83, 83);
        border-radius: 10px;
    }
    .nav-menu ul li a {
        color: rgb(221, 221, 221);
        text-decoration: none;
        font-size: 18px;
    }
    .nav-menu.active {
        display: block;
    }
    /* Estilos para pantallas medianas (tabletas y escritorios pequeños) */
    @media (min-width: 992px) and (max-width: 1199px) {
        .nav-top nav ul li a {
            font-size: 20px;
            margin: 0 25px;
        }
    }

    /* Estilos para pantallas pequeñas (tabletas en modo retrato) */
    @media (min-width: 768px) and (max-width: 991px) {
        .nav-top nav ul li a {
            font-size: 15px;
            margin: 0 20px;
        }
        button i {
            font-size: 25px;
        }
    }

    /* Estilos para dispositivos móviles */
    @media (max-width: 767px) {
        .nav-top {
            display: none;
        }
        .logo img {
            width: 65px;
            height: 50px;
        }
        .container-r {
            justify-content: space-around;
        }
        button i {
            font-size: 24px;
        }
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const button = document.querySelector(".nav-secundario button");
        const navMenu = document.querySelector(".nav-menu");
        let isMenuOpen = false;

        button.addEventListener("click", (event) => {
            event.stopPropagation(); // Evita que el clic en el botón se propague
            isMenuOpen = !isMenuOpen;
            navMenu.classList.toggle("active", isMenuOpen);
        });
        document.addEventListener("click", (event) => {
            const target = event.target as Node; // Afirmación de tipo

            if (
                isMenuOpen &&
                !navMenu.contains(target) &&
                !button.contains(target)
            ) {
                isMenuOpen = false;
                navMenu.classList.remove("active");
            }
        });
    });
</script>
