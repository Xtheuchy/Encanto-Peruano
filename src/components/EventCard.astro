---
const { image, title, breve } = Astro.props;
---

<div class="card-container">
    <div class="card">
        <div class="card-image">
            <img src={image} alt="" />
            <div class="card-text">
                <h2>{title}</h2>
                <p>{breve}</p>
            </div>
        </div>
    </div>
</div>
<style>
    .card-container {
        flex: 0 0 auto;
        width: 25%;
        height: 500px;
        border-radius: 10px;
        overflow: hidden;
    }
    .card {
        height: 500px;
        border-radius: 10px;
        position: relative;
    }
    .card-image {
        position: relative;
    }
    img {
        width: 100%;
        height: 500px;
        object-fit: cover;
        border-radius: 10px;
        mask-image: linear-gradient(rgb(0, 0, 0) 90%, transparent);
    }
    .card-text {
        position: absolute;
        bottom: 20px;
        left: 2px;
        color: white;
        background: rgba(0, 0, 0, 0.3);
        padding: 10px;
        border-radius: 5px;
    }

    .card-text h2 {
        margin: 0;
        font-size: 1.2em;
    }

    .card-text p {
        margin: 5px 0 0;
        font-size: 0.9em;
    }
    /* Estilos para pantallas medianas (tabletas y escritorios pequeños) */
    @media (min-width: 992px) and (max-width: 1199px) {
        .card-container {
            width: 35%;
            height: 200px;
        }
        .card {
            height: 200px;
        }
        img {
            height: 200px;
        }
        .card-text {
            padding: 5px;
            width: 85%;
        }

        .card-text h2 {
            font-size: .8em;
        }

        .card-text p {
            font-size: 0.7em;
        }
    }

    /* Estilos para pantallas pequeñas (tabletas en modo retrato) */
    @media (min-width: 768px) and (max-width: 991px) {
        .card-container {
            width: 35%;
            height: 200px;
        }
        .card {
            height: 200px;
        }
        img {
            height: 200px;
        }
        .card-text {
            padding: 5px;
            width: 85%;
        }

        .card-text h2 {
            font-size: .7em;
        }

        .card-text p {
            font-size: 0.6em;
        }
    }

    /* Estilos para dispositivos móviles */
    @media (max-width: 767px) {
        .card-container {
            width: 35%;
            height: 200px;
        }
        .card {
            height: 200px;
        }
        img {
            height: 200px;
        }
        .card-text {
            padding: 5px;
            width: 85%;
        }

        .card-text h2 {
            font-size: .6em;
        }

        .card-text p {
            font-size: 0.5em;
        }
    }
</style>
