<style>
	main {
		background-color: rgba(1, 0, 27, 0.744);
	}
	.scroll-container {
		display: flex;
		overflow-x: auto;
		padding: 10px;
		gap: 18px;
		scroll-behavior: smooth;
		max-width: 100%;
	}
	.scroll-container::-webkit-scrollbar {
		display: none;
	}
	.image {
		width: 100%;
		height: 730px;
		position: relative;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.info {
		position: absolute;
		z-index: 2;
		font-size: 9rem;
		color: white;
		text-align: center;
	}
	h1 {
		margin: 0;
	}
	button {
		height: 50px;
		width: 200px;
		background-color: rgba(240, 248, 255, 0);
		border: 2px solid rgb(255, 255, 255);
		color: white;
		font-family: "Times New Roman", Times, serif;
		font-size: 25px;
	}

	.image::before {
		content: "";
		position: absolute;
		background-image: url("/public/assets/portada-6.webp");
		width: 100%;
		height: 730px;
		mask-image: linear-gradient(rgb(0, 0, 0) 80%, transparent);
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		z-index: 1;
	}
	.title-section {
		color: white;
		font-size: 30px;
		margin: 0 0 0 200px;
		
	}
	h2{
	}
	span {
		border-bottom: 5px solid #f17705;
		padding-bottom: 5px;
	}
</style>
